@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h2>Text Analysis</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AnalyzeText" method="post" class="mb-3">
                        <div class="form-group">
                            <label for="inputText">Enter text to analyze for hate speech:</label>
                            <textarea id="inputText" name="inputText" class="form-control" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Analyze</button>
                    </form>
                    @if (ViewData["Result"] != null)
                    {
                        <div class="alert alert-info">
                            <h4>Hate Speech Analysis Result</h4>
                            <p>@ViewData["Result"]</p>
                        </div>
                        <div class="alert alert-secondary mt-3">
                            <h4>Text Analysis</h4>
                            <p>Length: @ViewData["TextLength"]</p>
                            <p>Word Count: @ViewData["WordCount"]</p>
                            <p>Character Count: @ViewData["CharacterCount"]</p>
                            <p>Most Frequent Word: @ViewData["MostFrequentWord"]</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h2>Word Count Analysis</h2>
                </div>
                <div class="card-body">
                    <form asp-action="WordCount" method="post">
                        <div class="form-group">
                            <label for="wordCountText">Enter text to count words:</label>
                            <textarea id="wordCountText" name="inputText" class="form-control" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Count Words</button>
                    </form>
                    @if (ViewData["TotalWordCount"] != null && ViewData["UniqueWordCount"] != null)
                    {
                        <div class="alert alert-info mt-3">
                            <h4>Word Count Result</h4>
                            <p>Total Words: @ViewData["TotalWordCount"]</p>
                            <p>Unique Words: @ViewData["UniqueWordCount"]</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2>Audio Analysis</h2>
                </div>
                <div class="card-body">
                    <form asp-action="AnalyzeAudio" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="audioFile">Upload an audio file:</label>
                            <input type="file" class="form-control-file" id="audioFile" name="audioFile">
                        </div>
                        <button type="submit" class="btn btn-primary">Analyze</button>
                    </form>
                    @if (ViewData["AudioResult"] != null)
                    {
                        <div class="alert alert-info mt-3">
                            <h4>Analysis Result</h4>
                            <p>@ViewData["AudioResult"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
